[url "github:"]
  InsteadOf = https://github.com/
  InsteadOf = git@github.com:

[alias]
  s = status
  a = add
  c = commit
  ac = commit -a
  l = log --oneline
  p = push
  d = diff
  r = remote
  o = checkout
  f = fetch -p
  g = "!f(){ nvim `git grep -n $1 | peco | awk -F ':' '{printf \"+%d %s\", $2, $1}'`;};f"

  # cd = "!ghq look `ghq list | peco --query \"$1\" --initial-filter Fuzzy --prompt 'PROJECT'`"
  # cd = "!ghq look `ghq list | peco --query \"$1\" --prompt 'PROJECT'`"
  get = !ghq get -p
  list = !ghq list
  root = "!exec $SHELL ; :"
  unget = "!ghq-unget $1"

[fetch]
    prune = true

[core]
	editor = nvim
    excludesfile = ~/.gitignore.local

# [init]
# 	templatedir = $HOME/.git_template/

[ghq]
   root = $HOME/.ghq/src
