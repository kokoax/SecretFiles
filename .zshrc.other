#bindkey
bindkey -M viins '^L' vi-cmd-mode

#C-^ で一つ上のディレクトリへ
function cdup() {
  echo
  cd ..
  zle reset-prompt
}
zle -N cdup
bindkey '^^' cdup

#alias
alias ls="ls -G"
alias ll="ls -lG"
alias la="ls -laG"

case ${OSTYPE} in
  darwin*)
    alias vim="vim -u $HOME/.vim/vimrc"
    alias ls="ls -G"
    alias ll="ls -lG"
    alias la="ls -laG"
  ;;
  linux*)
    alias ls="ls --color"
    alias ll="ls -l --color"
    alias la="ls -la --color"
  ;;
esac

