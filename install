#!/bin/bash

#  ########  ##    ##   #####    ########     ##     ##        ##
#     ##     ###   ##  ##   ##      ##      ##  ##   ##        ##
#     ##     ####  ##   ##   ##     ##     ##    ##  ##        ##
#     ##     ## ## ##     ##        ##     ##    ##  ##        ##
#     ##     ##  ####       ##      ##     ########  ##        ##
#     ##     ##   ###  ###   ##     ##     ##    ##  ##        ##
#  ########  ##    ##    #####      ##     ##    ##  ########  ########

[[ -z $DOTFILES ]] && DOTFILES=$HOME/dotfiles
for f in .??*
do
  [[ "$f" == ".git" ]] && continue
  [[ "$f" == ".gitignore" ]] && continue

  [[ ! -e "$HOME/$f" ]] && ln -fsv $DOTFILES/$f $HOME/$f

  echo $f
done

[[ -z $XDG_CONFIG_HOME ]]   && XDG_CONDIG_HOME=$HOME/.config
[[ ! -d $XDG_CONFIG_HOME ]] && mkdir -p $XDG_CONFIG_HOME
for f in *
do
  [[ "$f" == "README.md" ]] && continue
  [[ "$f" == "install" ]] && continue

  [[ ! -e "$XDG_CONFIG_HOME/$f" ]] && ln -fsv $DOTFILES/$f $XDG_CONFIG_HOME/$f

  echo $f
done

